<h1>Products</h1>
<br>

<% if session[:cart] == [] %>
<p>The cart is empty</p>
<% else %>
  <ul>
  <% session[:cart].each do |product|%>
    <li><%=product%></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag products_path do %>
  <label>Product</label>
  <%= text_field_tag 'product'%>
  <%= submit_tag 'add to cart'%>
<% end %>