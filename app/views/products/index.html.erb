<h1>Items in Cart</h1>

<% if session[:cart] %>
  <ul>
    <% session[:cart].each do |item| %>
      <li>
        <%= item %>
      </li>
    <% end %>
  </ul>
<% end %>

<h2>Add an Item</h2>

<%= form_tag('/add') do %>
  <%= label_tag 'product' %>
  <%= text_field_tag('product') %>
  <%= submit_tag "add to cart" %>
<% end %>
