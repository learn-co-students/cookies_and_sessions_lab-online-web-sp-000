<% if session[:cart].count >= 1 %>
	<p>Products in your cart:</p>
	<ul>
		<% session[:cart].each do |i|%>
		<li><%= i %></li>
		<% end %>
	</ul>
<% end %>


<%= form_tag("/products/add") do %>
	<%= label_tag('product', "product") %>
	<%= text_field_tag('product') %>
	<%= submit_tag "add to cart" %>
<% end %>