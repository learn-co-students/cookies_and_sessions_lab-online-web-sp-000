<% @cart ||= session[:cart] %>
<h1>Shopping Cart</h1>
  <% if !@cart.empty? %>
    <% @cart.each do |item| %>
      <p><%= item %></p>
    <% end %>
  <% end %>
  <%= form_for "/", method: 'POST' do |f| %>
    <%= f.label :product %>
    <input type="text" name="product" id="product" /><br />
    <%= f.submit "add to cart" %>
  <% end %>
